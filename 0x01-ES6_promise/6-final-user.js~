import signUpUser from './4-user-promise';
import uploadPhoto from './5-photo-reject';

export default function hadleProfileSignup(firstName, lastName, fileName) {
  const results = Promise.allSettled([signUpUser(firstName, lastName), uploadPhoto(fileName)]);

  return results.map((result) => {
    if (result.status === 'fulfilled') {
      return { status: result.status, value: result.value };
    } else {
      return { status: result.status, value: result.reason };
    }
  });
}
